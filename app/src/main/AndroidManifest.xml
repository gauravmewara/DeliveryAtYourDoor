<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collectorate.deliveryatyourdoor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.PdfViewActivity"></activity>
        <activity android:name=".Activity.ForgotPassword" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Activity.Cart" />
        <activity android:name=".Activity.Notification" />
        <activity android:name=".Activity.OrderConfirmation" />
        <activity android:name=".Activity.OrderSummary" />
        <activity android:name=".Activity.SignUp" />

        <activity android:name=".Activity.DeliveryFilterScreen"></activity>
        <activity android:name=".Activity.DeliveryOrderSummary" />
        <activity android:name=".Activity.DeliveryDashboard" />
        <activity android:name=".Activity.DeliverySelectYourWard" />

        <activity android:name=".Activity.PlaceOrder" />
        <activity android:name=".Activity.Login" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>