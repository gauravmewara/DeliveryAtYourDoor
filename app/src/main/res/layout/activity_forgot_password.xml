<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rl_forgotpwd_back">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/iv_forgotpwd_back"
            android:layout_centerVertical="true"
            android:foregroundGravity="left"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_marginTop="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fragment_forgot_mobile"
                android:inputType="number"
                android:hint="Mobile Number"
                android:maxLength="10"
                android:layout_alignTop="@+id/tv_fragment_forgot_sendotp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/tv_fragment_forgot_sendotp"
                android:layout_toLeftOf="@+id/tv_fragment_forgot_sendotp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:id="@+id/tv_fragment_forgot_sendotp"
                android:text="Send Otp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fragment_forgot_otp"
                android:hint="OTP"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fragment_forgot_newpwd"
                android:hint="New Password"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/tv_fragment_forgot_submit"
        android:text="Update Password"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
</RelativeLayout>