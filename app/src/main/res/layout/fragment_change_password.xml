<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/roundbuttonorange"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_fragment_changepwd_sendotp"
                android:text="Send Otp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fragment_changepwd_otp"
                android:hint="OTP"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fragment_changepwd_newpwd"
                android:hint="New Password"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green"
        android:id="@+id/tv_fragment_changepwd_submit"
        android:text="Update Password"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
</RelativeLayout>